@import "nib"
@import "libs/rhum"
@import "libs/reset"
@import "libs/base"

html
    width 100%
    height 100%
    background silver
    font normal 62.5%/1.25 Verdana, sans-serif

body
    position absolute
    width 120px
    height 120px
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    background #aaa url( ../img/dev.svg ) center no-repeat
    background-size 50px 50px
    box-shadow 0 0 50px rgba( black, .25 )
    border 1px solid black
    &:before
        content ""
        position absolute
        width 100%
        height 38px
        left 0
        bottom 0
        background #888

h1
    position absolute
    width 100%
    bottom -18px
    font bold 10px Verdana, sans-serif
    text-align center

h2
    position absolute
    bottom 5px
    right 5px
    text-align right
    color white
