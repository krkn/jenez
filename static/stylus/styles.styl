@import "nib"
@import "libs/rhum"
@import "libs/reset"
@import "libs/base"

html
    width 100%
    height 100%
    background silver
    font normal 62.5%/1.25 Verdana, sans-serif

body
    position absolute
    width 120*rpx
    height 120*rpx
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    background #aaa url( ../img/dev.svg ) center no-repeat
    background-size 50*rpx 50*rpx
    box-shadow 0 0 50*rpx rgba( black, .25 )
    border 1*rpx solid black
    &:before
        content ""
        position absolute
        width 100%
        height 38*rpx
        left 0
        bottom 0
        background #888

h1
    position absolute
    width 100%
    bottom -18*rpx
    font bold 10*rpx Verdana, sans-serif
    text-align center

h2
    position absolute
    bottom 5*rpx
    right 5*rpx
    text-align right
    color white
